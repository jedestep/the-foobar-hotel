filetype plugin on
filetype indent on

set autoread

set nu

set wildmenu

set wildignore=*.o,*~,*.pyc

set ruler

set hid

set backspace=eol,start,indent
set whichwrap+=<,>,h,l

set ignorecase
set smartcase
set incsearch

set lazyredraw
set magic

set showmatch
set mat=2

set noerrorbells
set novisualbell
set t_vb=
set tm=500

syntax enable
colorscheme delek
set background=dark

set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

set ai
set si
set wrap
